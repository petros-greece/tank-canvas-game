{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "scripts/**/*.js"
  ],
"compilerOptions": {
  "target": "ESNext",
  "module": "ESNext",
  "moduleResolution": "node",
  "outDir": "./dist",
  "rootDir": "./src", // Source folder for .ts files
  "esModuleInterop": true,
  "strict": true,
  "resolveJsonModule": true,
  "allowSyntheticDefaultImports": true
  }
}